<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.CustomerLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutLoginCredCustomerLogin">

        <ImageView
            android:id="@+id/imgChickenCustomerLogin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/chickenpic"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/layoutLoginCredCustomerLogin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your email"
            android:id="@+id/txtEmailCustomerLogin"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:lines="1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your password"
            android:id="@+id/txtPasswordCustomerLogin"
            android:layout_below="@+id/txtEmailCustomerLogin"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:lines="1"
            />

        <Button
            android:id="@+id/btnLoginCustomerLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPasswordCustomerLogin"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="login"
            android:background="@drawable/round_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutLoginCredCustomerLogin"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txtNewCustomerCustomerLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New customer?"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/txtCreateAccountCustomerLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/txtNewCustomerCustomerLogin"
                android:textColor="@color/blue"
                android:textStyle="bold"
                />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/txtVendorCustomerLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor?"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/txtVendorLoginCustomerLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtVendorCustomerLogin"
            android:text="@string/vendor_login"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="20sp"

            />

    </RelativeLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarCustomerLogin"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        />



</RelativeLayout>