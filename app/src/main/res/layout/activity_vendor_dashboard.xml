<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendor.VendorDashboardActivity">

    <include
        android:id="@+id/toolbarUpdateStore"
        layout="@layout/toolbar_update_store"
        android:visibility="visible"/>

    <include
        android:id="@+id/toolbarUpdateRecipes"
        layout="@layout/toolbar_update_recipes"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fragmentVendorDashboard"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_vendor_dashboard"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_vendor_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_vendor_dashboard"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="unlabeled"/>

</RelativeLayout>