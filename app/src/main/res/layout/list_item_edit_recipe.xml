<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentEditRecipe"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:id="@+id/imgRecipeEditRecipe"
            android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_toRightOf="@+id/imgRecipeEditRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/txtRecipeNameEditRecipe"/>

        <TextView
            android:id="@+id/txtShortDescEditRecipe"
            android:layout_toRightOf="@+id/imgRecipeEditRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Desc"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/txtRecipeNameEditRecipe"/>

            <ImageButton
                android:id="@+id/btnDeleteEditRecipe"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/imgRecipeEditRecipe"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_baseline_delete_white"
                />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>