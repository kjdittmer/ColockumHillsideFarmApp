<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipes.ContactUsFragment">

    <TextView
        android:id="@+id/text_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ContactTitle"
        android:layout_width="178dp"
        android:layout_height="39dp"
        android:text="Contact Us!"
        android:textAlignment="center"
        android:textSize="25"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="51dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/directMessage"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="228dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:hint="Leave us a message:" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/FarmEmail"
        android:layout_width="251dp"
        android:layout_height="23dp"
        android:text="suzanne@colockumhillsidefarm.com"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="665dp" />

</androidx.constraintlayout.widget.ConstraintLayout>