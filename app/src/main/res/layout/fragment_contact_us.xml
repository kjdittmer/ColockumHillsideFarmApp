<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ContactTitle"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Get in touch!"
            android:textAlignment="center"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/FarmEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ContactTitle"
            android:layout_centerHorizontal="true"
            android:autoLink="email"
            android:padding="10dp"
            android:text="suzanne@colockumhillsidefarm.com"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/MCTitle"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FarmEmail"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Sign up for our newsletter!"
            android:textAlignment="center"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/FarmMailChimpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MCTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            android:padding="10dp"
            android:text="Click below to subscribe to our newsletter through MailChimp. This will allow you to stay updated with any news regarding the farm, just input your name and email"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/FarmMailChimp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FarmMailChimpText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            android:padding="10dp"
            android:text="http://eepurl.com/gZJRdb"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>


